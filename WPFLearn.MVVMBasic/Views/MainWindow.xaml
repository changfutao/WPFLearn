<Window x:Class="WPFLearn.MVVMBasic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFLearn.MVVMBasic"
        mc:Ignorable="d"
        xmlns:vm="clr-namespace:WPFLearn.MVVMBasic.ViewModels"
        Title="MainWindow" Height="450" Width="800" FontSize="20">
    <Window.DataContext>
        <vm:WindowViewModel />
    </Window.DataContext>
    <StackPanel>
        <TextBox Text="{Binding mainWindow.Num1, UpdateSourceTrigger=PropertyChanged}"></TextBox>
        <TextBox Text="{Binding mainWindow.Num2, UpdateSourceTrigger=PropertyChanged}"></TextBox>
        <TextBox Text="{Binding mainWindow.Total}"></TextBox>
        <Border Background="DeepPink" Height="5" />
        <TextBox Text="{Binding mainWindow.Num1}" />
        <Button Command="{Binding mainWindow.Btn2Command}" CommandParameter="{Binding RelativeSource={RelativeSource Self}}">按钮1</Button>
    </StackPanel>
</Window>
